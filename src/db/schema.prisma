datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Note {
  id        String   @id @default(uuid())
  content   String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())
  updateAt  DateTime @default(now()) @updatedAt
}

model User {
  id    String  @id @default(uuid())
  email String  @unique
  name  String?
  notes Note[]
  createdAt DateTime @default(now())
  updateAt  DateTime @default(now()) @updatedAt
}
